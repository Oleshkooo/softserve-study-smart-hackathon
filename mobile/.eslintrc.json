{
    "env": {
        "es2021": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "extends": ["universe/native"],
    "rules": {
        "indent": ["off", 4],
        "no-console": "off",
        "no-unused-vars": "off",
        "no-eval": "error",
        "no-use-before-define": "off",
        "no-shadow": "off",

        "import/first": "error",
        "import/prefer-default-export": "off",
        "import/order": [
            "warn",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index",
                    "object",
                    "type"
                ],
                "newlines-between": "always-and-inside-groups"
            }
        ],
        "import/extensions": "off",
        "import/no-duplicates": "off"
    }
}
